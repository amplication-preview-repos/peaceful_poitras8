datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model OAuthProvider {
  clientId     String?
  clientSecret String?
  createdAt    DateTime @default(now())
  id           String   @id @default(cuid())
  providerName String?
  redirectUri  String?
  scope        String?
  updatedAt    DateTime @updatedAt
  user         User?    @relation(fields: [userId], references: [id])
  userId       String?
}

model User {
  createdAt      DateTime        @default(now())
  email          String?         @unique
  firstName      String?
  id             String          @id @default(cuid())
  lastName       String?
  oAuthProviders OAuthProvider[]
  password       String
  roles          Json
  updatedAt      DateTime        @updatedAt
  username       String          @unique
}
